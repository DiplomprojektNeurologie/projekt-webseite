---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
import { PROTOTYPE, SITE } from '~/config.mjs';
---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="text-center pb-10 md:pb-16">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					We analyze medical data for our
					<span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500">future</span>
				</h1>
				<div class="max-w-3xl mx-auto">
					<p class="text-xl text-gray-600 mb-8 dark:text-slate-400">
						{SITE.name} is a graduation project inspecting stroke records collected over nearly 20 years and visualizing
						the results, to make them accessible to future medical personal.
					</p>
					<div class="max-w-none px-6 flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
						{
							!PROTOTYPE.disabled && (
								<div class="flex w-full sm:w-auto">
									<a
										class="btn text-white border border-primary-600 bg-primary-600 hover:bg-primary-800 hover:border-primary-800 sm:mb-0 w-full"
										href="https://github.com/onwidget/astrowind"
										target="_blank"
										rel="noopener"
									>
										<Icon name="tabler:external-link" class="w-5 h-5 mr-1 -ml-1.5" />
										See our work
									</a>
								</div>
							)
						}
						<div class="flex w-full sm:w-auto">
							<a
								class={PROTOTYPE.disabled
									? 'btn text-white border border-primary-600 bg-primary-600 hover:bg-primary-800 hover:border-primary-800 sm:mb-0 w-full'
									: 'btn text-white bg-gray-900 hover:bg-gray-700 dark:bg-gray-700 dark:hover:bg-gray-800 w-full'}
								href="#mission"
							>
								{PROTOTYPE.disabled && <Icon name="tabler:arrow-down" class="w-5 h-5 mr-1 -ml-1.5" />}Learn more</a
							>
						</div>
					</div>
				</div>
			</div>
			<div>
				<div class="relative mb-8 m-auto max-w-3xl">
					<Picture
						src={import('~/assets/images/hero.jpg')}
						class="mx-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700 w-full"
						widths={[400, 768]}
						sizes=" (max-width: 767px) 400px, 768px"
						alt="Hero Image"
						aspectRatio="16:9"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
