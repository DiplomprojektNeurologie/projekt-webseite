---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';

const milestones = [
	{
		title: 'Data has been cleaned',
		due: '14.10.2022',
		done: true,
	},
	{
		title: 'Database has been set up',
		due: '11.11.2022',
		done: true,
	},
	{
		title: 'Analysis methods have been developed',
		due: '09.12.2022',
		done: true,
	},
	{
		title: 'Analysis methods have been compared',
		due: '06.01.2022',
		done: true,
	},
	{
		title: 'Results are available online',
		due: '14.02.2022',
		done: false,
	},
];
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl scroll-mt-16" id="milestones">
	<div class="grid gap-6 row-gap-10 md:grid-cols-2">
		<div class="mx-auto md:pb-6 md:pr-16">
			<h2 class="mb-8 md:mx-0 text-3xl lg:text-4xl text-center font-bold font-heading">Our Milestones</h2>
			{
				milestones.map((milestone, index, array) => (
					<div class="flex">
						<div class="flex flex-col items-center mr-4">
							<div>
								{milestone.done ? (
									<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-500 border-2">
										<Icon name="tabler:check" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
									</div>
								) : (
									<div class="flex items-center justify-center w-10 h-10 rounded-full border-secondary-500 border-2">
										<Icon name="tabler:dots" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
									</div>
								)}
							</div>
							{index != array.length - 1 ? <div class="w-px h-full bg-gray-300 dark:bg-slate-500" /> : false}
						</div>
						<div class="pt-1 pb-8">
							<p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{milestone.title}</p>
							<p class="text-gray-600 dark:text-slate-400">Due: {milestone.due}</p>
						</div>
					</div>
				))
			}
		</div>
		<div class="relative hidden md:block">
			<Picture
				class="inset-0 object-cover object-top w-full rounded-md shadow-lg md:absolute md:h-full bg-gray-400 dark:bg-slate-700"
				src={import('~/assets/images/plakat.png')}
				widths={[400, 768]}
				sizes="(max-width: 768px) 100vw, 432px"
				alt="Astronaut"
				aspectRatio="432:768"
			/>
		</div>
	</div>
</section>
