---
import { PROTOTYPE, SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Mission from '~/components/widgets/Mission.astro';
import Team from '~/components/widgets/Team.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Milestones from '~/components/widgets/Milestones.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero />
	<Mission />
	<Milestones />
	<Team />
	<HighlightedPosts />
	{PROTOTYPE.disabled ? false : <CallToAction />}
</Layout>
